<script>
    $(document).ready(function () {
        $(".button-collapse").sideNav({
            closeOnClick: true
        });
    });

    document.getElementById("sidenav-close").addEventListener("click", saveFile);

    document.getElementById('txtContent').defaultValue = fs.readFileSync(path.join(__dirname, "../public/notepad.txt"), "utf-8");

    let saveFile = () => {
        console.log("Saving data");
        const text = document.getElementById('txtContent');
        let data = text.value;
        console.log(data);

        fs.writeFile(path.join(__dirname, "../public/notepad.txt"), data, (err) => {
            if (err) {
                throw err;
            }
        })  

        console.log("Notepad saved.");
    }

</script>

